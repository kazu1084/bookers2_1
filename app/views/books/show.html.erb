<% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count,"error") %>prohibited this book from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3 px-15">
      <%= render '/books/list', user: @user,book:@book_new %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover tabole-invise">
        <tr>
          <th>
          <%= image_tag @book.user.get_profile_image(150,150) %>
          <br /><%= link_to @book.user.name,user_path(@book.user.id) %>
          </th>
          <th><%= link_to @book.title,book_path(@book.id) %></th>
          <th><%= @book.body %></th>
          <% if @book.user==current_user %>
            <th><%= link_to "Edit",edit_book_path(@book.id),class: "btn btn-success btn-sm btn-block text-white" %></th>
            <th><%= link_to "Destroy",book_path(@book.id), method: :delete,class: "btn btn-danger btn-sm btn-block text-white" %></th>
          <% end %>
         </tr>
      </table>
    </div>
  </div>
</div>