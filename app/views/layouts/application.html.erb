<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/9a7298a483.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header>
      <div class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
      <% if user_signed_in? %>
        <div class="navbar-brand">
      <span><%= link_to 'Bookers', root_path, class: 'text-white' %></span>
        </div>
      <div class="collapse navbar-collapse" id="navbarNaviDropdown">
        <ul class="navbar-nav ml-auto">
          <li class="nav-link p-8">
            <i class="fa-solid fa-house"></i>
            <%= link_to 'Home', user_path(current_user.id), class: 'text-white' %>
          </li>
          <li class="nav-link">
            <i class="fa-solid fa-users"></i>
            <%= link_to 'Users', users_path, class: 'text-white' %>
          </li>
          <li class="nav-link">
            <i class="fa-solid fa-book-open"></i>
            <%= link_to 'Books', books_path, class: 'text-white' %>
          </li>
          <li class="nav-link">
            <i class="fa-solid fa-right-from-bracket"></i>
            <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'text-white' %>
          </li>
        </ul>
      <% else %>
      <div class="navbar-brand">
        <span><%= link_to 'Bookers', root_path, class: 'text-white' %></span>
      </div>
      <div class="collapse navbar-collapse" id="navbarNaviDropdown">
        <ul class="navbar-nav ml-auto">
      <li class="nav-link p-8">
        <i class="fa-solid fa-house"></i>
        <%= link_to 'Home', root_path, class: 'text-white' %>
      </li>
      <li class="nav-link p-8">
        <i class="fa-solid fa-link"></i>
        <%= link_to 'About', about_path, class: 'text-white' %>
      </li>
      <li class="nav-link p-8">
        <i class="fa-solid fa-user-plus"></i>
        <%= link_to 'Sign up', new_user_registration_path, class: 'text-white' %>
      </li>
      <li class="nav-link p-8">
        <i class="fa-solid fa-right-to-bracket"></i>
        <%= link_to 'Log in', new_user_session_path, class: 'text-white' %>
      </li>
        </ul>
      </div>
      <% end %>
        </div>
        </div>
      </div>
    </header>
    <main>
      <p class="notice">
        <%= flash[:notice] %>
      </p>
      <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="m-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
