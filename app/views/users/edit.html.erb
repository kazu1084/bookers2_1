<% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count,"error") %>prohibited this user from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h1>User info</h1>
<%= form_with model: @user do |f| %>
<div class="form-group">
  <label for="inputName">Name</label>
  <%= f.text_field :name,autofocus:true,id:"inputName",class: "form-control" %>
</div>
<div class="form-group">
  <label for="inputImage">ProfileImage</label> </br>
  <%= f.file_field :profile_image,placeholder:"ファイルを選択",accept:"image/*" %>
</div>
<div class="form-group">
  <label for="inputintroduction">introduction</label>
  <%= f.text_area :introduction,id:"inputintroduction",class: "form-control"  %>
</div>

<div class="form-group">
  <%= f.submit"Update User" %>
</div>
<% end %>
    </div>
  </div>
</div>